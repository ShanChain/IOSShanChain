default_platform(:ios)

platform :ios do
  desc "Push a new release build to the App Store"
  lane :release do
    build_app(workspace: "ShanChain.xcworkspace", scheme: "ShanChain")
    upload_to_app_store
  end

  lane :beta do
      build_app(export_method: "ad-hoc")
      pgyer(api_key: "82f584c10019b8efdb484003bda9b543", user_key: "d1d68f0fe41cdf8ed7ad7236c65c152c", update_description: "update by fastlane")
  end
end
